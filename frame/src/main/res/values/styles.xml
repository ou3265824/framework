<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  这个是加入的代码 -->
    <style name="avatartpopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/anim_window_show</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/anim_window_hide</item>
        <!-- 指定消失的动画xml -->
    </style>


    <style name="publicloadingProgressStyle">
        <item name="android:maxWidth">108dip</item>
        <item name="android:maxHeight">104dip</item>
        <item name="android:indeterminateDrawable">@drawable/wb_loading_frame</item>
        <item name="android:minWidth">108dip</item>
        <item name="android:minHeight">104dip</item>
    </style>


</resources>
